<Window x:Class="MCNPFileEditor.CrossSectionImageShow.RadiusSetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MCNPFileEditor.CrossSectionImageShow"
        mc:Ignorable="d"
        Title="RadiusSetWindow" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="210*"/>
            <RowDefinition Height="59*"/>
        </Grid.RowDefinitions>
        <TextBox TextAlignment="Center" VerticalContentAlignment="Center" Padding="5,5,5,5" x:Name="textBlock"  HorizontalAlignment="Left" Margin="85,105,0,0" TextWrapping="Wrap" Text="10" VerticalAlignment="Top" Height="45" Width="120" FontSize="14" />
        <Button x:Name="button" Content="Accept" HorizontalAlignment="Left" Margin="40,20,0,0" Grid.Row="1" VerticalAlignment="Top" Width="75" Click="button_Click"/>
        <Button x:Name="button1" Content="Cancel" HorizontalAlignment="Left" Margin="160,20,0,0" Grid.Row="1" VerticalAlignment="Top" Width="75" Click="button1_Click"/>

    </Grid>
</Window>
