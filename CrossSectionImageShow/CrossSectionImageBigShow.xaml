<Window x:Class="MCNPFileEditor.CrossSectionImageShow.CrossSectionImageBigShow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MCNPFileEditor.CrossSectionImageShow"
        mc:Ignorable="d"
        Title="CrossSectionImageBigShow" Height="768" Width="1366">
    <Grid>
        <Viewbox>
            <Viewbox.RenderTransform>
                <TransformGroup>
                    <MatrixTransform x:Name="FrontalMatrixTransform"/>
                </TransformGroup>
            </Viewbox.RenderTransform>
            <Canvas x:Name="FrontalCanvas" Background="Transparent" Focusable="True">
                    <Image x:Name="FrontalImage">
                        
                    </Image>
                </Canvas>
            </Viewbox>
    </Grid>
</Window>
